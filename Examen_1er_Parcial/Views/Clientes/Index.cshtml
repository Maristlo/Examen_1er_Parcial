@model IEnumerable<Examen_1er_Parcial.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Cliente</a>
</p>
<div class="container-fluid">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th style="width: 12%;">@Html.DisplayNameFor(model => model.Id)</th>

                    <th style="width: 12%;">@Html.DisplayNameFor(model => model.Nombres)</th>
                    <th style="width: 12%;">@Html.DisplayNameFor(model => model.Apellidos)</th>
                    <th style="width: 15%;">@Html.DisplayNameFor(model => model.Correo)</th>
                    <th style="width: 18%;">@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th style="width: 10%;">Compañia</th>
                    <th style="width: 8%;">@Html.DisplayNameFor(model => model.Nota)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                    <th style="width: 15%;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>

                        <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                        <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                        <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Compania)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nota)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
