@model Examen_1er_Parcial.Models.Cliente

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="display-4">Eliminar Cliente</h1>

<h3>¿Está seguro de eliminar a este cliente?</h3>
<div class="alert alert-warning" role="alert">
    Esta acción no se puede deshacer.
</div>
<div>
    <h4>Detalles del Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Compania)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Compania)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nota)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nota)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </form>
</div>
