@model Examen_1er_Parcial.Models.EmpleadoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Empleados</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Empleado.Cedula" class="control-label"></label>
                <input asp-for="Empleado.Cedula" class="form-control" />
                <span asp-validation-for="Empleado.Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Nombres" class="control-label"></label>
                <input asp-for="Empleado.Nombres" class="form-control" />
                <span asp-validation-for="Empleado.Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Apellidos" class="control-label"></label>
                <input asp-for="Empleado.Apellidos" class="form-control" />
                <span asp-validation-for="Empleado.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.FechaNacimiento" class="control-label"></label>
                <input asp-for="Empleado.FechaNacimiento" class="form-control" />
                <span asp-validation-for="Empleado.FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Departamento" class="control-label"></label>
                <input asp-for="Empleado.Departamento" class="form-control" />
                <span asp-validation-for="Empleado.Departamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Municipio" class="control-label"></label>
                <input asp-for="Empleado.Municipio" class="form-control" />
                <span asp-validation-for="Empleado.Municipio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Dirección" class="control-label"></label>
                <input asp-for="Empleado.Dirección" class="form-control" />
                <span asp-validation-for="Empleado.Dirección" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Teléfono" class="control-label"></label>
                <input asp-for="Empleado.Teléfono" class="form-control" />
                <span asp-validation-for="Empleado.Teléfono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Celular" class="control-label"></label>
                <input asp-for="Empleado.Celular" class="form-control" />
                <span asp-validation-for="Empleado.Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Correo" class="control-label"></label>
                <input asp-for="Empleado.Correo" class="form-control" />
                <span asp-validation-for="Empleado.Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.FechaIngreso" class="control-label"></label>
                <input asp-for="Empleado.FechaIngreso" class="form-control" />
                <span asp-validation-for="Empleado.FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Profesión" class="control-label"></label>
                @Html.DropDownListFor(model => model.Empleado.Profesión, new SelectList(Model.Profesiones), "Seleccione una profesión", new { @class = "form-control" })
                <span asp-validation-for="Empleado.Profesión" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Puesto" class="control-label"></label>
                @Html.DropDownListFor(model => model.Empleado.Puesto, new SelectList(Model.Puestos), "Seleccione un puesto", new { @class = "form-control" })
                <span asp-validation-for="Empleado.Puesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Salario" class="control-label"></label>
                <input asp-for="Empleado.Salario" class="form-control" />
                <span asp-validation-for="Empleado.Salario" class="text-danger"></span>
            </div>
            
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary mr-2">Crear</button>
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
