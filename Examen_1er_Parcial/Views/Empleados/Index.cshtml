
@model IEnumerable<Examen_1er_Parcial.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Empleados</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <p>
            <a asp-action="Create" class="btn btn-primary">Crear Nuevo Empleado</a>
        </p>
    </div>
    <div class="d-flex align-items-center">
        <form asp-action="Index" method="get" class="form-inline">
            <div class="form-group mb-0">
                <input type="text" name="searchString" class="form-control" placeholder="Buscar empleados..." value="@ViewData["CurrentFilter"]" />
            </div>
            <button type="submit" class="btn btn-primary ml-2">Buscar</button>
        </form>
    </div>
</div>

<div class="container-fluid">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <!-- Encabezados de la tabla -->
                <tr>
                    <th style="width: 8%;">@Html.DisplayNameFor(model => model.Id)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Cedula)</th>
                    <th style="width: 12%;">@Html.DisplayNameFor(model => model.Nombres)</th>
                    <th style="width: 12%;">@Html.DisplayNameFor(model => model.Apellidos)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Departamento)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Municipio)</th>
                    <th style="width: 12%;">@Html.DisplayNameFor(model => model.Dirección)</th>
                    <th style="width: 8%;">@Html.DisplayNameFor(model => model.Teléfono)</th>
                    <th style="width: 8%;">@Html.DisplayNameFor(model => model.Celular)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Correo)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.FechaIngreso)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Profesión)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Puesto)</th>
                    <th style="width: 10%;">@Html.DisplayNameFor(model => model.Salario)</th>
                    <th style="width: 15%;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- Datos de cada fila -->
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                        <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Departamento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Municipio)</td>
                        <td>@Html.DisplayFor(modelItem => item.Dirección)</td>
                        <td>@Html.DisplayFor(modelItem => item.Teléfono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Celular)</td>
                        <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaIngreso)</td>
                        <td>@Html.DisplayFor(modelItem => item.Profesión)</td>
                        <td>@Html.DisplayFor(modelItem => item.Puesto)</td>
                        <td>@Html.DisplayFor(modelItem => item.Salario)</td>
                        <td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginación manual -->
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if (Model.Any())
            {
                <li class="page-item @(ViewData["currentPage"].ToString() == "1" ? "disabled" : "")">
                    <a class="page-link" href="?page=1">Primera</a>
                </li>
                <li class="page-item @(ViewData["currentPage"].ToString() == "1" ? "disabled" : "")">
                    <a class="page-link" href="?page=@(Convert.ToInt32(ViewData["currentPage"]) - 1)">Anterior</a>
                </li>

                @for (int i = 1; i <= Convert.ToInt32(ViewData["totalPages"]); i++)
                {
                    <li class="page-item @(ViewData["currentPage"].ToString() == i.ToString() ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }

                <li class="page-item @(ViewData["currentPage"].ToString() == ViewData["totalPages"].ToString() ? "disabled" : "")">
                    <a class="page-link" href="?page=@(Convert.ToInt32(ViewData["currentPage"]) + 1)">Siguiente</a>
                </li>
                <li class="page-item @(ViewData["currentPage"].ToString() == ViewData["totalPages"].ToString() ? "disabled" : "")">
                    <a class="page-link" href="?page=@ViewData["totalPages"]">Última</a>
                </li>
            }
        </ul>
    </nav>
</div>
